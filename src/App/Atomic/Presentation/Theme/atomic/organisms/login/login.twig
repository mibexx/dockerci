{% setting data = {
    content: {
        title: 'Login',
        username: 'Username',
        password: 'Password',
        button: 'Login',
        register: 'Create new account'
    },
    form: {
        action: '/login',
        register: '/register'
    }
} %}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">{{ data.content.title }}</h4>
        <div class="card-text">
            <form method="post" action="{{ data.form.action }}">
                <div class="form-group">
                    <div class="input-group">
                        {% embed molecule('input-prepend') with {
                            data: {
                                id: 'loginFormUsername',
                                prepend: data.content.username,
                                required: true
                            }
                        } %}{% endembed %}
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        {% embed molecule('input-prepend') with {
                            data: {
                                id: 'loginFormPassword',
                                type: 'password',
                                required: true,
                                prepend: data.content.password
                            }
                        } %}{% endembed %}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="input-group col-3">
                        {% embed atom('submit') with {
                            data: {
                                value: 'Login'
                            }
                        } %}{% endembed %}
                    </div>
                    <div class="input-group col-5">
                        {% embed atom('button') with {
                            data: {
                                href: '/github/login',
                                value: 'Login with github',
                                type: 'success',
                            }
                        } %}{% endembed %}
                    </div>
                </div>
                <div class="form-group">
                    {% embed atom('link') with {
                        data: {
                            href: data.form.register,
                            text: data.content.register
                        }
                    } %}{% endembed %}
                </div>
            </form>
        </div>
    </div>
</div>