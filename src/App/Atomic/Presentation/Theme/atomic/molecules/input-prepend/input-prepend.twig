{% setting data = {
    prepend: '@',
    id: 'input-prepend',
    value: '',
    placeholder: '',
    type: 'text',
    name: '',
    required: false
} %}

{% block prepend %}
    <div class="input-group-prepend">
        <div class="input-group-text">{{ data.prepend }}</div>
    </div>
{% endblock %}
{% block input %}
    <input type="{{ data.type }}"{% if data.required %} required="required"{% endif %} name="{{ data.name }}" class="form-control" id="{{ data.id }}"{% if data.placeholder != "" %} placeholder="{{ data.placeholder }}"{% endif %}{% if data.value != "" %} value="{{ data.value }}"{% endif %} />
{% endblock %}